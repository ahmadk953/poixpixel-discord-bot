{
  "compilerOptions": {
      "target": "ESNext",
      "module": "ESnext",
      "rootDir": "./src/",
      "outDir": "./target/",
      "strict": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "typeRoots": [
          "node_modules/@types"
      ],
      "sourceMap": false,
      "baseUrl": "./"
  },
  "files": [
      "src/index.ts"
  ],
  "include": [
      "./**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "target"
  ],
}